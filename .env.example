# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Azure SQL Database Connection
# Format: sqlserver://<server>.database.windows.net:1433;database=<database>;user=<user>;password=<password>;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;
DATABASE_URL="sqlserver://your-server.database.windows.net:1433;database=your-database;user=your-user;password=your-password;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;"

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-optional-if-same-as-jwt-secret

# Swagger Configuration
# Set to false in production
SWAGGER_ENABLED=true

# CORS Configuration
CORS_ORIGIN=*
